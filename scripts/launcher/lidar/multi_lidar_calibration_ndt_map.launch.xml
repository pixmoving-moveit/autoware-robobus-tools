<?xml version="1.0"?>
<launch>
  <arg name="pcd_path" default="/home/pixkit/pix/multi_lidar_cali2_ws/scirpt/scans_down.pcd" />
  <arg name="initial_pose" default="[0.0, 0.0, -0.4, 0.0, 1.57, 0.0]" />
  <arg name="leaf_size" default="0.2" />
  <arg name="max_iteration" default="10" />
  <arg name="transform_epsilon" default="0.001" />
  <arg name="step_size" default="0.05" />
  <arg name="resolution" default="0.5" />
  <arg name="icp_max_iteration" default="100" />
  <arg name="icp_transform_epsilon" default="1e-9" />
  <arg name="max_coorespondence_distance" default="0.05" />
  <arg name="euclidean_fitness_epsilon" default="0.5" />
  <arg name="ransac_outlier_rejection_threshold" default="0.5" />
  <arg name="crop_box_min_x" default="-1.0" />
  <arg name="crop_box_min_y" default="-1.0" />
  <arg name="crop_box_min_z" default="-1.0" />
  <arg name="crop_box_max_x" default="1.0" />
  <arg name="crop_box_max_y" default="1.0" />
  <arg name="crop_box_max_z" default="2.0" />
  <arg name="negativate_crop_box" default="true" />

  <arg name="input_topic" />
  <arg name="output_topic" default="/sensing/lidar/remover_points"/>
  <arg name="output/cropped_target_pointcloud" default='/sensing/lidar/cropped_points' />

  <arg name="data_path" default="$(env HOME)/autoware_data" description="packages data and artifacts directory path"/>
  <arg name="model_name" default="centerpoint_tiny" description="options: `centerpoint` or `centerpoint_tiny`"/>
  <arg name="model_path" default="$(var data_path)/lidar_centerpoint"/>
  <arg name="model_param_path" default="$(find-pkg-share pointcloud_map_segmentation_remover)/config/$(var model_name).param.yaml"/>
  <arg name="class_remapper_param_path" default="$(find-pkg-share pointcloud_map_segmentation_remover)/config/detection_class_remapper.param.yaml"/>
  <arg name="score_threshold" default="0.35"/>
  <arg name="yaw_norm_threshold" default="0.0"/>
  <arg name="has_twist" default="false"/>
  <arg name="remover_initial_pose" default="[]"/>

  <group>
    <node pkg="pointcloud_map_segmentation_remover" exec="pointcloud_map_segmentation_remover_publisher_node" name="pointcloud_map_segmentation_remover" output="screen">
      <param name="score_threshold" value="$(var score_threshold)"/>
      <param name="yaw_norm_threshold" value="$(var yaw_norm_threshold)"/>
      <param name="densification_world_frame_id" value="map"/>
      <param name="densification_num_past_frames" value="0"/>
      <param name="trt_precision" value="fp16"/>
      <param name="has_twist" value="$(var has_twist)"/>
      <param name="encoder_onnx_path" value="$(var model_path)/pts_voxel_encoder_$(var model_name).onnx"/>
      <param name="encoder_engine_path" value="$(var model_path)/pts_voxel_encoder_$(var model_name).engine"/>
      <param name="head_onnx_path" value="$(var model_path)/pts_backbone_neck_head_$(var model_name).onnx"/>
      <param name="head_engine_path" value="$(var model_path)/pts_backbone_neck_head_$(var model_name).engine"/>
      <param from="$(var model_param_path)"/>
      <param from="$(var class_remapper_param_path)"/>
      <param name="initial_pose" value="$(var remover_initial_pose)"/>
      <remap from="~/input/pointcloud" to="$(var input_topic)"/>
      <remap from="~/output/pointcloud" to="$(var output_topic)"/>
      <remap from="output/marker" to="/pointcloud_map_segmentation_remover/marker"/>
    </node>
  </group>

  <group>
    <node pkg="multi_lidar_calibration" name="multi_lidar_calibration_ndt_map_node" exec="multi_lidar_calibration_ndt_map_node" output="screen">
      <param name="pcd_path" value="$(var pcd_path)"/>
      <param name="initial_pose" value="$(var initial_pose)"/>
      <param name="leaf_size" value="$(var leaf_size)" />
      <param name="max_iteration" value="$(var max_iteration)"/>
      <param name="transform_epsilon" value="$(var transform_epsilon)"/>
      <param name="step_size" value="$(var step_size)"/>
      <param name="resolution" value="$(var resolution)" />
      <param name="icp_max_iteration" value="$(var icp_max_iteration)"/>
      <param name="icp_transform_epsilon" value="$(var icp_transform_epsilon)"/>
      <param name="max_coorespondence_distance" value="$(var max_coorespondence_distance)"/>
      <param name="euclidean_fitness_epsilon" value="$(var euclidean_fitness_epsilon)" />
      <param name="crop_box_min_x" value="$(var crop_box_min_x)" />
      <param name="crop_box_min_y" value="$(var crop_box_min_y)" />
      <param name="crop_box_min_z" value="$(var crop_box_min_z)" />
      <param name="crop_box_max_x" value="$(var crop_box_max_x)" />
      <param name="crop_box_max_y" value="$(var crop_box_max_y)" />
      <param name="crop_box_max_z" value="$(var crop_box_max_z)" />
      <param name="negativate_crop_box" value="$(var negativate_crop_box)" />
      <param name="ransac_outlier_rejection_threshold" value="$(var ransac_outlier_rejection_threshold)" />
      <remap from="~/input/target_pointcloud" to="$(var output_topic)"/>
      <remap from="~/output/cropped_pointcloud" to="$(var output/cropped_target_pointcloud)"/>
    </node>
  </group>

</launch>
